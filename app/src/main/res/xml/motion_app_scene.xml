<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bgToolbar"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </Constraint>
        <Constraint
            android:id="@+id/visibilityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/appBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/expandedSubtitle"
            app:layout_constraintStart_toStartOf="@+id/expandedSubtitle"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/bgToolbar"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </Constraint>
        <Constraint
            android:id="@+id/visibilityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            app:layout_constraintBottom_toBottomOf="@+id/bgToolbar"
            app:layout_constraintEnd_toEndOf="@+id/bgToolbar"
            app:layout_constraintTop_toTopOf="@+id/bgToolbar" />
        <Constraint
            android:id="@+id/appBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            app:layout_constraintTop_toTopOf="@id/bgToolbar"
            app:layout_constraintBottom_toBottomOf="@id/bgToolbar"
            app:layout_constraintStart_toStartOf="@id/bgToolbar"
            android:translationX="-22dp" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">

        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@+id/expandedSubtitle"
                app:framePosition="70"
                android:translationX="30dp" />
            <KeyAttribute
                app:motionTarget="@+id/expandedSubtitle"
                app:framePosition="70"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/expandedSubtitle"
                app:framePosition="100"
                android:translationX="30dp" />
            <KeyAttribute
                app:motionTarget="@+id/expandedSubtitle"
                app:framePosition="100"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
